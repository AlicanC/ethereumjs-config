{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "definitions/*"
      ]
    },
    "typeRoots": [
      "definitions",
      "node_modules/@types"
    ],
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "target": "es5",
    "lib": ["es2018"]
  }
}